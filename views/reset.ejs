<%- include("./partials/header") %>

<div class="row text-center">
    <div class="col-md-12">
        <form class="form-signin" action="/reset/<%=token%>" method="post">
            <legend>Reset Password</legend>
            <div class="form-group">
                <label for="password" class="sr-only">New Password</label>
                <input id="password" class="form-control" type="password" name="password" placeholder="New password" autofocus>
            </div>
            <div class="form-group">
                <label for="confirmPassword" class="sr-only">Confirm Password</label>
                <input id="confirmPassword" class="form-control" type="password" name="confirmPassword" placeholder="Confirm password">
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Update Password">
            </div>
        </form>
    </div>
</div>

<%- include("./partials/footer") %>