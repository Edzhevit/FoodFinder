<%- include("../partials/header") %>

<div class="container">
    <div class="row text-center">
        <div class="col-md-12">
            <h1>Review Page: <%= place.name %></h1>
            <div class="card">
                <div class="card-body">
                    <% if (place.rating === 0) { %>
                        <h5>
                            <em>No reviews yet.</em>
                        </h5>
                    <% } else { %>
                        <p>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star <% if (place.rating > 1.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (place.rating > 2.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (place.rating > 3.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (place.rating > 4.5) { %> checked <% } %>"></span>
                            <em>(total reviews: <%= place.reviews.length %>)</em>
                        </p>
                        <p>
                            Current place rating: <strong><%= place.rating.toFixed(2) %></strong>
                        </p>
                        <p><h4>All reviews for this place:</h4></p>
                        <hr>
                        <% place.reviews.forEach(function(review){ %>
                            <div class="row">
                                <div class="col-md-3">
                                    <%- '<span class="fa fa-star checked"></span>'.repeat(review.rating) %><%- '<span class="fa fa-star"></span>'.repeat(5 - review.rating) %>
                                    <div>Review by: <strong><%= review.author.username %></strong></div>
                                    <span><em><%= review.updatedAt.toDateString() %></em></span>
                                </div>
                                <div class="col-md-9">
                                    <p style="text-align: justify; word-wrap: break-word;">
                                        <%= review.text %>
                                    </p>
                                    <% if(currentUser && review.author.id.equals(currentUser._id)){ %>
                                    <a class="btn btn-sm btn-warning"
                                       href="/places/<%=place._id %>/reviews/<%=review._id %>/edit">Edit</a>
                                    <form class="deleteForm" action="/places/<%=place._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                                        <input type="submit" class="btn btn-sm btn-danger" value="Delete">
                                    </form>
                                    <% } %>
                                </div>
                            </div>
                            <hr>
                        <% }); %>
                    <% } %>
                    <div>
                        <a class="btn btn-success mb-1 <% if (currentUser && place.reviews.some(function (review) {return review.author.id.equals(currentUser._id)})) { %> disabled <% } %>" href="/places/<%= place._id %>/reviews/new">
                            Write a New Review</a>
                    </div>
                        <a class="btn btn-secondary" href="/places/<%= place._id %>"><i class="fa fa-arrow-left"></i> Go Back</a>
                </div>
            </div>
        </div>
    </div>
    <!--Review section-->
</div>

<%- include("../partials/footer") %>