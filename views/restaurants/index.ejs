<%- include("../partials/header") %>

    <header class="jumbotron">
        <div class="container">
            <h1><span class="glyphicon glyphicon-tent"></span>Welcome to FoodFinder!</h1>
            <p>View our hand-picked restaurants from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/restaurants/new">Add New Restaurant</a>
            </p>
            <p>
                <form class="form-inline" action="/restaurants" method="get">
                    <div class="form-group">
                        <input class="form-control" type="text" name="search" placeholder="Restaurant Search...">
                        <input class="btn btn-default" type="submit" value="Search">
                    </div>
                </form>
            </p>
        </div>
    </header>

    <div id="campground-grid" class="row text-center">
        <div class="col-md-12">
            <% if (noMatch !== undefined) { %>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% restaurants.forEach(function(restaurant){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img class="card-img-top" src="<%= restaurant.image %>"  alt="<%= restaurant.name %>">
                    <div class="card-body">
                        <h5 class="card-title"> <%= restaurant.name %> </h5>
                        <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

<%- include("../partials/footer") %>