<%- include("../partials/header") %>

<div class="row text-center">
    <div class="col-md-12">
        <form class="form-signin" action="/places" method="POST" enctype="multipart/form-data">
            <h1 class="h3 mb-3 font-weight-normal">Add New Place</h1>
            <div class="form-group">
                <label for="name" class="sr-only">Name</label>
                <input id="name" class="form-control" type="text" name="place[name]" placeholder="Name" required autofocus>
            </div>
            <div class="form-group">
                <label for="image" class="sr-only">Image</label>
                <input id="image" class="form-control" type="file" name="image" accept="image/*" required>
            </div>
            <div class="form-group">
                <label for="description" class="sr-only">Description</label>
                <input id="description" class="form-control" type="text" name="place[description]"
                       placeholder="Description">
            </div>
            <div class="form-group">
                <label for="location" class="sr-only">Location</label>
                <input id="location" class="form-control" type="text" name="place[location]"
                       placeholder="Location">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Add</button>
            </div>
        </form>
        <a class="btn btn-secondary" href="/places"><i class="fa fa-arrow-left"></i> Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>