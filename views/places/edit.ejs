<%- include("../partials/header") %>

<div class="row text-center">
    <div class="col-md-12">
        <h1 class="h3 mb-3 font-weight-normal">Edit <%= place.name %></h1>
        <form class="form-signin" action="/places/<%= place.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name" class="sr-only">Name</label>
                <input id="name" class="form-control" type="text" name="place[name]"
                       value="<%= place.name %>" autofocus>
            </div>
            <div class="form-group">
                <label for="image" class="sr-only">Image</label>
                <input id="image" class="form-control" type="text" name="place[image]"
                       value="<%= place.image %>">
            </div>
            <div class="form-group">
                <label for="description" class="sr-only">Description</label>
                <input id="description" class="form-control" type="text" name="place[description]"
                       value="<%= place.description %>">
            </div>
            <div class="form-group">
                <label for="location" class="sr-only">Location</label>
                <input id="location" class="form-control" type="text" name="location"
                       value="<%= place.location %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit</button>
            </div>
        </form>
        <a class="btn btn-secondary" href="/places"><i class="fa fa-arrow-left"></i> Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>