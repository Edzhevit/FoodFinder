<%- include("../partials/header") %>

    <div class="row text-center">
        <div class="col-md-12">
            <h1 class="h3 mb-3 font-weight-normal">Add New Comment to <%=restaurant.name%></h1>
            <form class="form-signin" action="/restaurants/<%=restaurant._id%>/comments" method="POST">
                <div class="form-group">
                    <label for="text" class="sr-only">Text</label>
                    <input id="text" class="form-control" type="text" name="comment[text]" placeholder="Text" required autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add Comment</button>
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>

<%- include("../partials/footer") %>