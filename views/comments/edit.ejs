<%- include("../partials/header") %>

    <div class="row text-center">
        <div class="col-md-12">
            <h1 class="h3 mb-3 font-weight-normal">Edit Comment</h1>
            <form class="form-signin" action="/restaurants/<%= restaurant_id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="text" class="sr-only">Text</label>
                    <input id="text" class="form-control" type="text" name="comment[text]" value="<%= comment.text%>" required autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit</button>
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>

<%- include("../partials/footer") %>